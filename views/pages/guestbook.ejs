<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">

<%- include("../partials/header.ejs") %>

<body>

  <%- include("../partials/navbar.ejs") %>

    <div class="container mx-auto">
      <h1 class="mb-4">
        <%= pageTitle %>
      </h1>
      <div class="row">
        <% guestData.forEach(function(entry, index) { %>
          <div class="col-md-6">
            <div class="entry">
              <p class="message <%= index % 2 == 0 ? " float-start" : "float-end" %>"><%= entry.message %>
              </p>
              <p class="username">
                <%= entry.username %>
              </p>
              <p class="date">
                <%= new Date(entry.date).toLocaleString("fi-FI", {timeZone: "UTC" , hour: "2-digit" , minute: "2-digit"
                  , day: "2-digit" , month: "2-digit" , year: "2-digit" }) %>
              </p>
              <p class="country">
                <%= entry.country %>
              </p>
            </div>
          </div>
          <% }); %>
      </div>
    </div>
    <footer>

      <%- include("../partials/footer.ejs") %>

    </footer>
</body>

</html>